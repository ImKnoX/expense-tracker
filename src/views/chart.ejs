<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/manifest.ejs')  %>
  <title>Trasaction Spending In Pie Chart</title>
</head>
<body>
  <div id="chart-container">
    <canvas id="transactionChart"></canvas>
  </div>
  <script type="text/javascript">
    const ctx = document.getElementById('transactionChart').getContext('2d')
    let labels = `<%= JSON.stringify(chart.labels) %>`
    let data = `<%= JSON.stringify(chart.data) %>`
    const myPieChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: labels,
            datasets: [{
                label: labels,
                data: data,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
        }
    });
  </script>
</body>
</html>